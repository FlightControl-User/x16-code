{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "X16-Compile",
            "command": "kickc_dev",
            "args": [
                "-t=cx16",
                "-a",
                "-Sc",
                "-Si",
                // "-v",
                "-Ocoalesce",
                "-Xassembler=-symbolfile",
                "${fileDirname}/${fileBasename}"
            ],
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "x16-Make-Run",
            "command": "cmd/X16-Make-Run.ps1",
            "args": [
                "${fileDirname}",
                "${fileBasenameNoExtension}.prg"
            ],
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "x16-Run",
            "command": "cmd/X16-Run.ps1",
            "args": [
                "${fileDirname}",
                "${fileBasenameNoExtension}.prg"
            ],
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "x16-Run-Emu",
            "command": "x16emu.exe",
            "args": [
                "-prg", 
                "${fileDirname}\\${fileBasenameNoExtension}.prg",
                "-run",
                "-debug"
            ],
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }

    ]
}
